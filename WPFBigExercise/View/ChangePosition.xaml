<Window x:Class="WPFBigExercise.View.ChangePosition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBigExercise.View"
        mc:Ignorable="d"
        Title="ChangePosition" Height="96" Width="254">
    <Grid>
        <Label Content="Change Position" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding TmpList}" x:Name="Cb" HorizontalAlignment="Left" Margin="111,10,0,0" VerticalAlignment="Top" Width="120" ></ComboBox>
        <Button Command="{Binding ChangeCommand}" CommandParameter="{Binding ElementName=Cb}" Content="Change" HorizontalAlignment="Left" Margin="187,37,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
